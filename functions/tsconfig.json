{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./types/**", "./node_modules/@types"],
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "typings"],
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
